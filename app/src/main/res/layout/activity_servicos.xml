<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Serviços">

    <TextView
        android:id="@+id/edtServicos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Serviços"
        android:textAlignment="center"
        android:textColor="#E91E63"
        android:textSize="45dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="85dp" />

    <TextView
        android:id="@+id/edtServicos2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        android:text="Banho: R$45,00"
        android:textAlignment="viewStart"
        android:textColor="#FF6FA0"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/edtServicos"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/edtServicos3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="Tosa: R$50,00"
        android:textAlignment="viewStart"
        android:textColor="#FF6FA0"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/edtServicos2"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/edtServicos4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="Tosa Higiênica: R$45,00"
        android:textAlignment="viewStart"
        android:textColor="#FF6FA0"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/edtServicos3"
        tools:layout_editor_absoluteX="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>